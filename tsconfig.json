{
	"compilerOptions": { 
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"types": [
			"node"
		],
		"allowJs": true
	},                         
	"exclude": ["node_modules"],                         
	"include": ["src/**/*.ts", "src/**/*.js"],
	"lib": ["es2015"]
}